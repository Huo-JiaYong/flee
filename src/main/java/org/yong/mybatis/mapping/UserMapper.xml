<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.yong.spring.mvc.dao.UserMapper">


	<resultMap id="mbuser" type="org.yong.spring.mvc.model.User">
		<id property="id" column="user_id" />
		<result property="name" column="user_name" />
		<result property="age" column="user_age" />
	</resultMap>

	<insert id="add" parameterType="org.yong.spring.mvc.model.User">
		INSERT INTO user (user_name,user_age)
		VALUES (#{name},#{age})
	</insert>

	<update id="update" parameterType="org.yong.spring.mvc.model.User">
		UPDATE user SET user_name=#{name},user_age=#{age} WHERE user_id=#{id}
	</update>
	
	<delete id="delete">
		DELETE FROM user WHERE user_id=#{id,javaType=string}
	</delete>
	
	<select id="selectByID" parameterType=""></select>

</mapper>